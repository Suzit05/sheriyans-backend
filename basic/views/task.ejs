<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>

    <div class="main text-white w-full min-h-screen bg-zinc-800">
        <div class="form  flex flex-col justify-center items-center p-4 w-full">
            <form action="/create" method="post">
                <input name="title" class="w-[80vw] text-black m-4 p-4 rounded-md" type="text" placeholder="title">
                <textarea name="details" class="w-[80vw] text-black m-4 p-4 rounded-md"
                    placeholder="write your task details here" id=""></textarea>
                <button class="bg-green-500 p-2 rounded-md">create task</button>
            </form>
        </div>
        <div class="task p-10 flex flex-wrap gap-3">
            <% if (files.length> 0) { %>
                <% files.forEach(function (val) { %>
                    <div class="task  w-72 px-3 py-4 rounded-md bg-zinc-400">
                        <h1>
                            <%= val %>
                        </h1> 
                        <a class="text-blue-700 inline-block mt-2" href="/file/<%= val%>">Read more..</a>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <h2>No task yet...</h2>
                            <% } %>




        </div>
    </div>




</body>

</html>